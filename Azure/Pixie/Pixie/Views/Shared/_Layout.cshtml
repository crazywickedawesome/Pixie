@using System.Web.Configuration
@using Pixie.Resources
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge" />
    <title>@ViewBag.Title - Pixie</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/Custom")
    @RenderSection("scripts", required: false)
</head>
    <body>
        <script type="text/javascript">
            window.appBasePath = "@WebConfigurationManager.AppSettings["appBasePath"]";
        </script>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Pixie", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Strings.Characters_Label <i class="fa fa-caret-down"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li class="dropdown-header">@Strings.Characters_Label</li>
                                <li><a href="@Url.Action("List", "Characters")"><i class="fa fa-users"></i> @(Strings.Characters_MyLabel)</a></li>
                                <li><a href="@Url.Action("New", "Characters")"><i class="fa fa-plus-square-o"></i> @(Strings.Characters_NewLabel)</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Strings.Notes_Label <i class="fa fa-caret-down"></i></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="@Url.Action("List", "Notes")">@Strings.Notes_List_MyLabel</a></li>
                            </ul>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Jack Schaible</p>
            </footer>
        </div>
    </body>
</html>
